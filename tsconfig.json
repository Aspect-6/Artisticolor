{
	"compilerOptions": {
		"outDir": "./dist",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@ts/*": ["ts/*"],
            "@styles/*": ["assets/styles/*"],
            "@import_bundles/*": ["import_bundles/*"],
            "@utils/*": ["lib/utilities/*"],
            "@lib/*": ["lib/*"],
            "@anim/*": ["lib/utilities/anim/*"],
            "@error/*": ["lib/utilities/anim/error/*"],
            "@firebase/*": ["lib/utilities/firebase/*"],
            "@components/*": ["components/*"]
        }
	}
}
