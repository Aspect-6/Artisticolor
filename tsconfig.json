{
	"compilerOptions": {
		"outDir": "./dist",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@contexts/*": ["contexts/*"],
            "@hooks/*": ["hooks/*"],
            "@config/*": ["config/*"],
            "@pages/*": ["pages/*"],
            "@styles/*": ["assets/styles/*"],
            // All folder under lib/
            "@lib/*": ["lib/*"],
            "@utils/*": ["lib/utilities/*"],
            "@anim/*": ["lib/utilities/anim/*"],
            "@error/*": ["lib/utilities/anim/error/*"],
        }
	}
}
